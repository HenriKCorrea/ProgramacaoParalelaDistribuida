{
        "version": "0.2.0",
        "configurations": [
            { 
                "name": "Attach Server",
                "type": "cppdbg",
                "request": "attach",
                "program": " ${workspaceRoot}/server",
                "processId": "${command:pickProcess}",
                "MIMode": "gdb"
            },
            {
                "name": "BankRPC Launch",
                "type": "cppdbg",
                "request": "launch",
                "program": "${workspaceRoot}/client",
                "args": ["criarConta", "localhost", "-c", "99999999999", "-n", "Henrique", "-s", "110.63"],
                "stopAtEntry": false,
                "cwd": "${workspaceRoot}/",
                "environment": [],
                "externalConsole": true,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
            {
                "name": "BankRPC Launch Server",
